<input/>
<button>Compare com o meu segredo!</button>
//botão do html onde o usuário irá inserir o número.

<script>

	function sorteia() { 
//função que vai retornar o número sorteado aleatóriamente.
		return Math.round(Math.random()*10);
	}

	function sorteiaNumeros(quantidade){ 
//função que vai definir os três (ou quantos vc definir) números sorteados e quais são.
//quantidade é o número de números sorteados.

		var segredos = [];
		//array, a boa prática é colocar a variável no plural.

		var numero = 1; 
		//contador, para ajudar a saber quantos números eu já sorteei.

		while(numero <= quantidade){
			//enquanto o contador for menor ou igual <= a quantidade de números que precisam ser sorteados esse laço vai rodar.
			
			//Para evitar repetições nos números aleatórios:
			var numeroAleatorio = sorteia(); 
			//a função sorteia() recebe a variável numeroAleatorio, você aqui sorteia um número aleatório.
			var achou = false; 
			//achou é falso inicialmente porque ele ainda não foi encontrado na lista de segredos; por que ainda não foi verificado na lista de números gerados;
			
			if(numeroAleatorio !== 0){ 
			//o número sorteado tem que ser diferente !== de zero!

				for(var posicao = 0; posicao < segredos.length; posicao++){

					if(segredos[posicao] == numeroAleatorio){
					//se, o número nessa posição do array for igual a algum número já existente
					achou = true; 
					//ou seja achou é verdadeiro, existe um número igual. Então achou recebe = true.
					break; 
					//o código é quebrado, para pq o número que foi gerado é igual ao que já existe.
					}
				}

				if(achou == false){ 
				//se o númeroAleatorio não é igual a nenhum outro que já tem, achou é falso. 
				//então o número encontrado será empurrado para dentro de segredos; essa comparação é feita pelo ==.
				segredos.push(numeroAleatorio); 
				//a função push "empurra" o número pra dentro do array;
				numero++; 
				//o incremento só vai ser realizado se os números encontrados forem diferentes dos que já existem;
 				//Dessa forma é encontrado o número certo de elementos sorteados.
				}

			}

		}

		return segredos; 
		//retorna a lista do números sorteados.
	}

	var segredos = sorteiaNumeros(3); //aqui é definido o número de elementos sorteados.

	console.log(segredos);

	var input = document.querySelector("input"); 
	//este comando quarySelector pega a informação do input no html.
	input.focus();
	//dá destaque no botão assim quando a página é recarregada.
	
	function verifica(){

		var achou = false; 
		//essa variável vai ser comparada se o usuário acertar ou errar o chute. 
		//se for true, o chute está certo e o código vai ser quebrado (break). 
		//se errou achou == false (a variável é igual a false), exibe o alert você errou como determinado pelo if.
		//nesse for abaixo, posição começa do 0, por que a primeira posição de um array é designado pelo zero.
		//segredos.length vai chamar o tamanho, comprimento do array.

		for(var posicao = 0; posicao < segredos.length; posicao++){
		//nesse if o input.value ou seja, o valor inserido no botão do html é comparado ao array em cada posição que é chamado pelo [].
			if(input.value == segredos[posicao]){
			alert("Você acertou!");
			achou = true; 
			//se acertou, o código é quebrado.
			break;
			} 
		}

		if(achou == false){

			alert("Você Errou!!!");
		}

		input.value = ""; 
		//limpa a caixa inserindo uma string vazia.
		input.focus(); 
		//deixa a caixa em destaque.
	}

	var button = document.querySelector("button");
	button.onclick = verifica; 
	//quando o usuário clicar, a função verifica vai ser chamada.
	// verifica sem () é diferente de verifica(), com parênteses executa automaticamente a função. Sem o parêntesis, significa que vc está guardando o código.

</script>
